{
    "protocol": "https://formfree.github.io/.well-known/protocol/dcx",
    "published": false,
    "types": {
        "application": {
            "schema": "https://formfree.github.io/.well-known/schema/dcx-application-record.json",
            "dataFormats": [
                "application/json"
            ]
        },
        "manifest": {
            "schema": "https://formfree.github.io/.well-known/schema/dcx-manifest-record.json",
            "dataFormats": [
                "application/json"
            ]
        },
        "response": {
            "schema": "https://formfree.github.io/.well-known/schema/dcx-response-record.json",
            "dataFormats": [
                "application/json"
            ]
        },
        "invoice": {
            "schema": "https://formfree.github.io/.well-known/schema/dcx-invoice-record.json",
            "dataFormats": [
                "application/json"
            ]
        }
    },
    "structure": {
        "manifest": {
            "$actions": [
                {
                    "who": "anyone",
                    "can": [
                        "read"
                    ]
                }
            ]
        },
        "application": {
            "$actions": [
                {
                    "who": "anyone",
                    "can": [
                        "create"
                    ]
                },
                {
                    "who": "author",
                    "of": "application",
                    "can": [
                        "read"
                        // do we want to allow the author to update the application?
                    ]
                }
            ],
            "response": {
                "$actions": [
                    {
                        "who": "recipient",
                        "of": "application",
                        "can": [
                            "create",
                            "update"
                        ]
                    },
                    {
                        "who": "author",
                        "of": "application",
                        "can": [
                            "read"
                        ]
                    }
                ]
            },
            "invoice": {
                "$actions": [
                    {
                        "who": "recipient",
                        "of": "application",
                        "can": [
                            "create",
                            "update"
                        ]
                    },
                    {
                        "who": "author",
                        "of": "application",
                        "can": [
                            "read"
                        ]
                    }
                ]
            }
        }
    }
}