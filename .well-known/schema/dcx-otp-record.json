{
    "$id": "https://formfree.github.io/.well-known/schema/dcx-otp-record.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "OTP Phone or Email",
    "type": "object",
    "properties": {
        "otp": {
            "type": "object",
            "required": [
                "pin"
            ],
            "properties": {
                "pin": {
                    "type": "string",
                    "pattern": "^[0-9]{6}$"
                },
                "phone": {
                    "type": "string",
                    "pattern": "^\\d{10}$"
                },
                "email": {
                    "type": "string",
                    "pattern": "^[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}$"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "phone"
                    ]
                },
                {
                    "required": [
                        "email"
                    ]
                }
            ]
        },
        "additionalProperties": false
    },
    "required": [
        "otp"
    ],
    "additionalProperties": false
}